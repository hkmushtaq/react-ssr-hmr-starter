        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["DOM", "ESNext"],
        "target": "ES6",
        "module": "CommonJS",
        "jsx": "react"
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}